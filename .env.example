# Environment Variables Template
# Copy this file to credentials/.env and fill in your actual values
# NEVER commit the actual .env file to git

# ================================
# OpenAI API (STT/TTS/LLM)
# ================================
OPENAI_API_KEY=sk-your_openai_api_key_here

# ================================
# Home Assistant
# ================================
# Home Assistant URL (default: http://localhost:8123)
HA_URL=http://localhost:8123

# Long-Lived Access Token (generate in HA: Profile -> Security -> Long-Lived Access Tokens)
HA_TOKEN=your_home_assistant_token_here

# ================================
# Alternative STT Providers (Optional)
# ================================
# Deepgram API (for testing alternative STT models)
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# Google Cloud Speech (optional)
GOOGLE_CLOUD_API_KEY=your_google_cloud_key_here

# Azure Speech (optional)
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=your_region_here

# ================================
# Alternative TTS Providers (Optional)
# ================================
# ElevenLabs (for high-quality TTS)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# ================================
# n8n Automation (Optional)
# ================================
# n8n webhook URLs and authentication
N8N_WEBHOOK_URL=http://localhost:5678/webhook/your_webhook_id
N8N_API_KEY=your_n8n_api_key_here

# ================================
# AnythingLLM RAG Platform
# ================================
# AnythingLLM API endpoint
ANYTHINGLLM_API_URL=http://localhost:3001
ANYTHINGLLM_API_KEY=your_anythingllm_api_key_here

# ================================
# Session Manager Configuration
# ================================
# Enable debug logging (true/false)
DEBUG_MODE=false

# Voice activation threshold
VOICE_ACTIVATION_THRESHOLD=0.6

# Maximum session duration (minutes)
MAX_SESSION_DURATION=120
